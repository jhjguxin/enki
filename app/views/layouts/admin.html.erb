<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
  <meta charset="utf-8">

  <title><%= enki_config[:title] %> - Admin</title>

  <%= csrf_meta_tag %>

  <%= javascript_include_tag 'jquery.js' %>
  <%= javascript_include_tag 'jquery.livequery.js' %>
  <%= javascript_include_tag 'jquery.form.js' %>
  <%= javascript_include_tag 'jquery.easing.1.3.js' %>
  <%= javascript_include_tag 'rails.js' %>
  <%= javascript_include_tag 'humanmsg' %>
  <%= javascript_include_tag 'admin/shortcut' %>
  <%= javascript_include_tag 'admin/common' %>

  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'humanmsg' %>
  <%= stylesheet_link_tag 'admin' %>
  <%= favicon_link_tag %>
  <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
  <%= yield(:head) %>

  <% if flash[:notice] -%>
  <script>
    jQuery(document).ready(function() {
      humanMsg.displayMsg('<%= escape_javascript(flash[:notice]) %>');
    })
  </script>
  <% end -%>

</head>
<body>
  <div id="page">
    <div id="content">
      <%= yield %>
    </div>




    </div>
    <div id="nav">
      <ul>
        <li><%= nav_link_to( t('menu.dashboard'), admin_root_path,       :accesskey => '1') %></li>

        <li><%= nav_link_to(t('menu.posts'),     admin_posts_path,      :accesskey => '2') %> <%= nav_link_to("(+)", new_admin_post_path, :accesskey => 'n') %></li>
        <li><%= nav_link_to(t('menu.pages'),     admin_pages_path,      :accesskey => '3') %> <%= nav_link_to("(+)", new_admin_page_path, :accesskey => 'p') %></li>
        <li><%= nav_link_to(t('menu.comments'),  admin_comments_path,   :accesskey => '4') %></li>
        <li><%= nav_link_to(t('menu.actions'),   admin_undo_items_path, :accesskey => '5') %></li>
        <li><%= nav_link_to(t('menu.Health'),    admin_health_path,     :accesskey => '6') %></li>
        <li class="separator">&nbsp;</li>
      <% if user_signed_in? %>
          <li><%= link_to t('menu.my_home_page'), edit_user_registration_path %></li>
          <li><%= link_to t('common.logout'), destroy_user_session_path %></li>

      <% end %>
        <li><%= link_to(t('menu.view_sites'), '/',             :accesskey => 'v', :title => 'View Site') %></li>
      </ul>
    </div>
  </div>
</body>
</html>
