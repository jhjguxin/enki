<h1><%= Page.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th>Created At</th>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Link</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @pages.empty? -%>
      <tr><td colspan="5">There are no pages at this time.</td></tr>
    <% else -%>
      <%= render :partial => 'page', :collection => @pages %>
    <% end -%>
  </tbody>

  <tfoot>
    <% if @pages.pages > 1 -%>
      <tr class="pagination">
        <td colspan="0">
          <%= paginate @pages %>
        </td>
      </tr>
    <% end -%>
  </tfoot>
</table>
