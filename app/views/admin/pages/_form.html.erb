<% content_for(:head) do -%>
  <%= javascript_include_tag 'admin/edit-preview' %>
<% end -%>

<%= form.inputs do -%>
  <%= form.input :title,:label => t("activerecord.attributes.page.title")%>
  <%= form.input :slug,:label => t("activerecord.attributes.page.slug"), :hint => "Leave blank for an auto-generated slug based on the title." %>
  <%= form.input :body,:label => t("activerecord.attributes.page.body"), :hint => "<a href='http://textile.thresholdstate.com/'>Textile enabled</a>. Use Ctrl+E to switch between preview and edit mode.".html_safe %>
<% end -%>
