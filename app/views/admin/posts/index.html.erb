<% content_for(:head) do -%>
  <%= javascript_include_tag('admin/posts.js') %>
<% end -%>

<h1><%= Post.model_name.human %></h1>
<table>
  <thead>
    <tr>
      <th>Published At</th>
      <th>Title</th>
      <th>Author</th>
      <th>Excerpt</th>
      <th>Comments</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.empty? -%>
      <tr><td colspan="5">There are no posts at this time.</td></tr>
    <% else -%>
      <%= render :partial => 'post', :collection => @posts %>
    <% end -%>
  </tbody>

  <tfoot>
    <% if @posts.pages > 1 -%>
      <tr class="pagination">
        <!--colspan 属性规定单元格可横跨的列数colspan="0" 指示浏览器横跨到列组的最后一列
-->
        <td colspan="0">
          <%= paginate @posts %>
        </td>
      </tr>
    <% end -%>
  </tfoot>
</table>
