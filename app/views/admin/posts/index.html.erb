<% content_for(:head) do -%>
  <%= javascript_include_tag('admin/posts.js') %>
<% end -%>

<h1>Your posts</h1>
<table>
  <thead>
    <tr>
      <th>Published At</th>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Comments</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.empty? -%>
      <tr><td colspan="5">There are no posts at this time.</td></tr>
    <% else -%>
      <%= render :partial => 'post', :collection => @posts %>
    <% end -%>
  </tbody>

  <tfoot>
    <% if @posts.pages > 1 -%>
    <%= paginate @posts %>
    <% end -%>

  </tfoot>
</table>
