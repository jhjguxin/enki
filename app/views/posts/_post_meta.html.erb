<div class="info">
  <ul>
    <li class="date">On <%= format_post_date(post.published_at) %></li>
    <li class="user"><%= t('common.post_by') %><%= show_user(post.user) %></li>
    <li class="comments"><%= link_to(pluralize(post.approved_comments.size, "comment"), post_path(post, :anchor => 'comments')) %></li>
    <% unless post.tags.empty? -%>
    <li class="tags"><%= t('common.tagged') %> <%= linked_tag_list(post.tags) %></li>
    <% end -%>
  </ul>
</div>
